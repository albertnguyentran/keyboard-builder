@page
@model keyboard_builder.Pages.Forms.CustomKeyboardModel
@{
}

<div class="text-center container">
    <h1>Build Your Own Keyboard</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4">
        <input type="text" asp-for="Keyboard.KeyboardName" placeholder="Give it a name" />
        <br />
        <input type="checkbox" asp-for="Keyboard.Keycaps" placeholder="Keycaps" />Keycaps
        <br />
        <input type="checkbox" asp-for="Keyboard.Switches" placeholder="Switches" />Switches
        <br/>

        <button class="btn btn-primary mt-1" type="submit">Order</button>

    </form>
</div>