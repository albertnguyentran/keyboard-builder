@page
@model keyboard_builder.Pages.Checkout.CheckoutModel
@{
}


<h1>Your Order:</h1>
@{
    var imagePath = "~/images/keyboards/" + (@Model.ImageTitle + ".jpeg");
}
<div class="align-content center">
    <div class="col-3 mx-auto mb-5">
        <img src="@imagePath" class="w-100" asp-append-version="true" />
        <p>Your order for the @Model.KeyboardName Keyboard is ready</p>
        <p>Total price is: @Model.KeyboardPrice $</p>
        <br />
        <a class="btn alert-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou">Confirm Order</a>
    </div> 
</div>
